<?xml version="1.0" encoding="utf-8"?>

<org.skyfox.example.pinnedheaderlistview.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="horizontal"
    android:checkMark="?android:listChoiceIndicatorMultiple"
    >

    <TextView
        android:id="@+id/textItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="42dp"
        android:gravity="center_vertical"
        android:textColor="#FF000000"
        android:textSize="15dp"
        />

</org.skyfox.example.pinnedheaderlistview.CheckableLinearLayout>